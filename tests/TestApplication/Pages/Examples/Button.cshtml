@page
@model Polinet_ASPC.ModelBase<ButtonPage>
@{
    ViewData["Title"] = "Button";
    Layout = "~/Pages/_Layout.cshtml";
}
<script>hljs.initHighlightingOnLoad();</script>


<h2>Button</h2>
<button id="@nameof(ButtonPage.BT_test)"></button>
<br /><br />

<div class="ui styled accordion" style="width:100%">
    <div class="title">
        <i class="dropdown icon"></i>
        Source
    </div>
    <div class="content">

        <div class="ui raise segment">
            <a class="ui orange ribbon label">HTML</a>
            <pre><code>&lt;button id="&commat;nameof(Model.BT_test)"&gt;&lt;/button&gt;</code></pre>
        </div>

        <div class="ui raise segment">
            <a class="ui green ribbon label">C#</a>
            <pre>
            <code>
public Polinet.Controls.Html.Button BT_test = new Polinet.Controls.Html.Button();
public void OnGet()
{
    InitializePolinetControls();
    BT_test.OnClicked += BT_test_OnClicked;
    BT_test.Text = "Button test";
}

private void BT_test_OnClicked(Polinet.Controls.Html.HtmlControlBase control)
{
    BT_test.Text = "You clicked me !";
}
                </code>
            </pre>
        </div>

    </div>
</div>

<script>
    $('.ui.accordion')
        .accordion()
        ;
</script>


